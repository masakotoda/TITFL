<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_alignParentLeft="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/imageViewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/progressBarClock"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/progressBarClock"
        android:background="@android:color/background_light"
        android:contentDescription="@string/blank_string" />
    
    <ProgressBar
        android:id="@+id/progressBarClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/progressbar_clock" />

    <ImageView
        android:id="@+id/imageViewAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/blank_string"
        android:src="@drawable/player_a_frm0" />

    <TextView
        android:id="@+id/textViewAlias"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/imageViewHome"
        android:layout_toRightOf="@+id/progressBarClock"
        android:text="@string/dummy_string"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/textViewWeek"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textViewAlias"
        android:layout_toLeftOf="@+id/imageViewHome"
        android:layout_toRightOf="@+id/progressBarClock"
        android:text="@string/dummy_string" />
    
    <TextView
        android:id="@+id/textViewHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="@string/home"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <ImageView
        android:id="@+id/imageViewHome"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:layout_below="@+id/textViewHome"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/blank_string"
        android:src="@drawable/marble" />
        
    <ProgressBar
        android:id="@+id/progressBar1"
        style="@style/progressStyleSatisfaction"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView1"
        android:layout_toRightOf="@+id/imageViewAvatar" />
    <TextView
        android:id="@+id/textView1"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewAvatar"
        android:layout_toRightOf="@+id/imageViewAvatar"
        android:text="@string/wealth"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <ProgressBar
        android:id="@+id/progressBar2"
        android:layout_marginTop="8dp"
        style="@style/progressStyleSatisfaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/imageViewAvatar" />
    <TextView
        android:id="@+id/textView2"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar1"
        android:layout_toRightOf="@+id/imageViewAvatar"
        android:text="@string/career"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <ProgressBar
        android:id="@+id/progressBar3"
        android:layout_marginTop="8dp"
        style="@style/progressStyleSatisfaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/imageViewAvatar" />    
	<TextView
        android:id="@+id/textView3"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar2"
        android:layout_toRightOf="@+id/imageViewAvatar"
        android:text="@string/education"
        android:textAppearance="?android:attr/textAppearanceSmall" />

	<ProgressBar
        android:id="@+id/progressBar4"
        android:layout_marginTop="8dp"
        style="@style/progressStyleSatisfaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/imageViewAvatar" />
    <TextView
        android:id="@+id/textView4"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar3"
        android:layout_toRightOf="@+id/imageViewAvatar"
        android:text="@string/leisure"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ProgressBar
        android:id="@+id/progressBar5"
        android:layout_marginTop="8dp"
        style="@style/progressStyleSatisfaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/imageViewAvatar" />
    <TextView
        android:id="@+id/textView5"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar4"
        android:layout_toRightOf="@+id/imageViewAvatar"
        android:text="@string/health"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <ProgressBar
        android:id="@+id/progressBar6"
        android:layout_marginTop="8dp"
        style="@style/progressStyleSatisfaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/imageViewAvatar" />
    <TextView
        android:id="@+id/textView6"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar5"
        android:layout_toRightOf="@+id/imageViewAvatar"
        android:text="@string/happiness"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textViewCash"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/imageViewAvatar"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView7"
        android:text="@string/cash"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/textView7"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewCash"
        android:layout_below="@+id/progressBar6"
        android:text="@string/cash"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textViewJob"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/imageViewFooter"
        android:text="@string/dummy_string"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <ImageView
        android:id="@+id/imageViewFooter"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/background_light"
        android:contentDescription="@string/blank_string" />
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_marginLeft="2dp"
        android:layout_width="38dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/blank_string"
        android:src="@drawable/marble" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="38dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageView1"
        android:contentDescription="@string/blank_string"
        android:src="@drawable/marble" />
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="38dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageView2"
        android:contentDescription="@string/blank_string"
        android:src="@drawable/marble" />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="38dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageView3"
        android:contentDescription="@string/blank_string"
        android:src="@drawable/marble" />
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="38dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageView4"
        android:contentDescription="@string/blank_string"
        android:src="@drawable/marble" />
    
</RelativeLayout>
