<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.noetap.titfl.TITFLPlayerView
        android:id="@+id/playerView"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />
    
    <ImageView
        android:id="@+id/imageViewAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/playerView"
        android:layout_centerVertical="true"
        android:contentDescription="@string/blank_string"
        android:src="@drawable/player_a_frm0" />
    
    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/dummy_string"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/imageViewGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewName"
        android:contentDescription="@string/blank_string"
        android:src="@drawable/marble" />

    <Button
        android:id="@+id/buttonClose"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/playerView"
        android:text="@string/close" />

    <Button
        android:id="@+id/buttonWork"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/buttonClose"
        android:text="@string/work" />

    <Button
        android:id="@+id/buttonApply"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonWork"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/buttonWork"
        android:text="@string/apply_job" />
    
    <ListView
        android:id="@+id/listViewGoods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/buttonClose"
        android:layout_below="@+id/imageViewGreeting" >

    </ListView>

    <TextView
        android:id="@+id/textViewGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonApply"
        android:layout_toRightOf="@+id/imageViewGreeting"
        android:text="@string/dummy_string"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</RelativeLayout>